# Supabase Configuration (Required for Prisma database)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
NEXT_PUBLIC_SUPABASE_PROJECT_ID=your_supabase_project_id_here

# Database Configuration (Prisma + Supabase)
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@[YOUR-PROJECT-REF].supabase.co:5432/postgres?schema=public"
DIRECT_URL="postgresql://postgres:[YOUR-PASSWORD]@[YOUR-PROJECT-REF].supabase.co:5432/postgres?schema=public" # optional, recommended

# Trello Configuration (Required for project sync)
# Get your API key from: https://trello.com/app-key
NEXT_PUBLIC_TRELLO_API_KEY=your_trello_api_key_here
# Generate token from the same page after getting API key
NEXT_PUBLIC_TRELLO_API_TOKEN=your_trello_token_here
# Board ID extracted from your Trello URL (RVFcbKeF from https://trello.com/b/RVFcbKeF/n2-gestao)
NEXT_PUBLIC_TRELLO_BOARD_ID=RVFcbKeF

# Edge Function (server-only, set in Supabase Dashboard -> Project Settings -> Functions)
# These are NOT used by Next.js directly, but by supabase/functions/trello-webhook
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
TRELLO_WEBHOOK_SECRET=change_me
